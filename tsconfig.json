{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "strict": true,
    "target": "ES2015",
    "module": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": ["esnext", "dom"],
    "rootDirs": ["./examples", "./packages/components/**", "./site"],
    "paths": {
        "@models/*": ["./packages/components/models/*"],
        "@hooks": ["./packages/components/hooks"],
        "@directives": ["./packages/components/directives"],
    },
  }
}
